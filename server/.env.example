# Server Configuration
PORT=8080
NODE_ENV=production
FRONTEND_URL=https://your-frontend-url.run.app

# OpenAI Configuration (REQUIRED for training generation)
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=4000

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=4096

# Google Gemini Configuration
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_MODEL=gemini-pro

# xAI Grok Configuration
XAI_API_KEY=your_xai_api_key_here
XAI_BASE_URL=https://api.x.ai/v1
XAI_MODEL=grok-beta

# Llama Configuration (via Replicate or Ollama)
REPLICATE_API_KEY=your_replicate_api_key_here
LLAMA_MODEL=meta/llama-2-70b-chat
# For local Ollama: http://localhost:11434
OLLAMA_BASE_URL=http://localhost:11434

# RAG Configuration
EMBEDDING_MODEL=text-embedding-ada-002
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
VECTOR_DB_TYPE=chromadb

# Security
JWT_SECRET=your_jwt_secret_here
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
